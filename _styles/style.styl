//====================
// import
// ===================
@import ("smart-grid.styl");
@import ("settings.styl")

//====================
// code
// ===================

header
	flex-grow 0;
	width: 100%;

.header
	margin: 0 auto !important
	wrapper()
	row-flex()
	justify-content space-between
	align-items center
	min-height 90px
	background-color: $blue;
	&__logo
		font(40px,CherrySwash,500,#fff)
		col()
		margin-left 80px;
		md(margin-left, 30px)
		sm(margin-left, 0px)
	&__navBar
		row-flex()
		margin-right 80px
		md(margin-right, 30px)
		sm(margin-right, 0px)
		padding-left 0;
		li
			&:nth-child(2),
			&:nth-child(3),
			&:nth-child(4)
				&:before
					content "/"
					font(18px,"Helvetical Cond",100,#fff)
			a
				font(18px,"Helvetical Cond",100,#fff)
				text-transform uppercase;
				line-height 25px
				padding: 10px 25px
				md(padding, 10px)

.fotorama
	display flex;
	margin 0 auto !important
	max-width 1200px;
	position relative

main
	max-width 1280px;
	margin 0 auto
	flex-grow 1;

.first
	min-height 448px
	display flex
	flex-flow column wrap;
	max-width 1024px;
	margin 0 auto
	align-items center
	justify-content center
	&__h
		max-width 680px
		text-align center
		line-height 49px
		font(30px,"Helvetical Light",400,$darkblue)
	&__p
		font(14px,"Helvetical Roman",700,$darkblue)
		max-width 850px
		text-align center
	&__logos
		margin-top 70px;
		display flex;
		max-width 800px
		padding 0
		li
			margin 10px 45px


.second
	background-color: $green;
	min-height 470px
	wrapper();
	margin 0 auto
	display flex;
	justify-content center;
	align-items center;
	flex-flow column wrap;
	&__photo
		text-align center;
		.name
			text-transform uppercase
			line-height 58px
			font(26px,"Helvetical Bold",400,#fff)
			position relative
			bottom 90px;
			padding-left 40px;
			&:after
				content "	\201D"
				position absolute
				font(339px,"Helvetical bold",400,#33d9a1)
				top 122px
				left: 12px
	&__para
		margin-top 50px;
		max-width 950px
		text-align center;
		line-height 32px;
		font(18px,"Helvetical Light",400,#fff)


.third
	wrapper()
	display flex;
	justify-content center;
	align-items center;
	margin 0 auto;
	background-image: url("../_img/section_layer4.png");
	min-height 515px;
	background-size: cover;
	#form
		border-radius 50%;
		background-color: rgba(255, 255, 255, .7)
		width: 480px;
		height: 470px;
		display flex;
		flex-flow column wrap;
		justify-content center;
		align-items center;
		input
			width: 250px;
			height: 35px;
			margin 5px 0 5px 0
			border: 1px solid #c0c0c0;
			&[type='text']
				margin-top 50px;
		textarea
			border: 1px solid #c0c0c0;
			margin-top 5px;
			width: 250px
			height: 150px;
			margin-bottom 30px;
		.button
			cursor: pointer;

footer
	wrapper()
	row-flex()
	justify-content center;
	text-align center;
	align-items center;
	margin 0 auto;
	min-height 40px;
	background-color: $green
	.footer
		text-transform uppercase
		line-height 25px
		letter-spacing .1rem;
		font(14px,"Helvetical Light",300,#fff)